{% extends '../themes/'~ page.theme|default('default') ~'/base.twig' %}

{% block content %}
{% embed '../components/top-heading.twig' %}
    {% block link %}{{ topHeading.links[locale].toHome|raw }}{% endblock %}
    {% block claim %}{{ topHeading.publication[locale]|raw }}{% endblock %}
{% endembed %}

<section class="Publication">
    <div class="u-wrapper row">
        <div class="{{ page.commonStuff.class.mainSection|raw }}">
            <p class="homeMainClaim">{{ mainSection.home[locale]|raw }}</p>
        </div>
        {% embed '../components/aside.twig' %}
            {% block title %}{{ aside.introduction.forPublication.title.en|raw }}{% endblock %}
            {% block description %}{{ aside.introduction.forPublication.description.en|raw }}{% endblock %}
        {% endembed %}
    </div>
</section>

{% endblock %}