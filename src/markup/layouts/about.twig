{% extends '../themes/'~ page.theme|default('default') ~'/base.twig' %}

{% block content %}

{% embed '../components/top-heading.twig' %}
    {% block link %}{{ topHeading.links[locale].toPainting|raw }}{% endblock %}
    {% block claim %}{{ topHeading.about[locale]|raw }}{% endblock %}
{% endembed %}

<h1 style="display: none;">About</h1>
<section class="About">
    <div class="u-wrapper row">
        <div class="{{ page.commonStuff.class.mainSection|raw }}">
            {% include '../modules/professional-skills.twig' %}
            {% include '../modules/personal-skills.twig' %}
            {% include '../modules/technical-skills.twig' %}
        </div>
        {% embed '../components/aside.twig' %}
            {% block title %}{{ aside.introduction.forAbout.title.en|raw }}{% endblock %}
            {% block description %}{{ aside.introduction.forAbout.description.en|raw }}{% endblock %}
            {% block asideForAbout %}
                {% include '../modules/baby-slider.twig' %}
                {% include '../modules/language-skills.twig' %}
            {% endblock %}
        {% endembed %}
    </div>
</section>

{% endblock %}