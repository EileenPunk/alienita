<footer>
    <div class="FooterLinks">
        <div class="u-wrapper for-eroski">
            <nav class="FooterLinks-nav u-clearfix">

                <ul class="FooterLinks-nav u-clearfix">
                    {% for item in footer.conditions[locale] %}
                    <li><a href="{{ item.link }}" data-utmterm="{{ item.utmterm }}" target="_blank" title="{{ item.title }}">{{ item.title }}</a></li>
                    {% endfor %}
                    <li class="SocialIcons">
                        {% for item in footer.socials %}
                        <a class="ico--{{ item.title }}" href="{{ item.link }}" title="Seguir">{{ item.title }}</a>
                        {% endfor %}
                    </li>
                </ul>

            </nav>
            <ul class="languages">
                <li class="es"><a href="{{ localeLinks.es }}">{{ header.language.es }}</a></li>
                <li class="en"><a href="{{ localeLinks.en }}">{{ header.language.en }}</a></li>
            </ul>
        </div>
    </div>

</footer>
