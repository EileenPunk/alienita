<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <style>
        body {
            background: linear-gradient(to bottom, rgb(114, 114, 114) 0%, rgb(36, 36, 36) 100%);
            height: 100vh;
            overflow: hidden;
            position: relative;
            width: 100vw;
        }
        
        .img {
            animation-fill-mode: forwards;
            animation-iteration-count: 1;
            background-position: center;
            background-repeat: no-repeat;
            background-size: contain;
            height: 500px;
            left: 50%;
            opacity: 0;
            position: absolute;
            top: 50%;
            width: 500px;
        }
        
        .img-01,
        .img-02,
        .img-03,
        .img-04,
        .img-05,
        .img-06,
        .img-07,
        .img-08,
        .img-09,
        .img-10,
        .img-11,
        .img-12,
        .img-13,
        .img-14,
        .img-15,
        .img-16,
        .img-17,
        .img-18,
        .img-19 {
            animation-duration: 1s;
            animation-name: animation;
        }
        
        .img-20 {
            animation-duration: 5s;
            animation-name: text;
        }
        
        .img-21 {
            animation-duration: 1s;
            animation-name: final;
        }
        
        .img-02 {
            animation-delay: .2s;
        }
        
        .img-03 {
            animation-delay: .5s;
        }
        
        .img-04 {
            animation-delay: .8s;
        }
        
        .img-05 {
            animation-delay: 1s;
        }
        
        .img-06 {
            animation-delay: 1.2s;
        }
        
        .img-07 {
            animation-delay: 1.5s;
        }
        
        .img-08 {
            animation-delay: 1.8s;
        }
        
        .img-09 {
            animation-delay: 2s;
        }
        
        .img-10 {
            animation-delay: 2.2s;
        }
        
        .img-11 {
            animation-delay: 2.5s;
        }
        
        .img-12 {
            animation-delay: 2.8s;
        }
        
        .img-13 {
            animation-delay: 3s;
        }
        
        .img-14 {
            animation-delay: 3.2s;
        }
        
        .img-15 {
            animation-delay: 3.5s;
        }
        
        .img-16 {
            animation-delay: 3.8s;
        }
        
        .img-17 {
            animation-delay: 4s;
        }
        
        .img-18 {
            animation-delay: 4.2s;
        }
        
        .img-19 {
            animation-delay: 4.5s;
        }
        
        .img-20 {
            animation-delay: 3s;
        }
        
        .img-21 {
            animation-delay: 6s;
        }
        
        @keyframes animation {
            0% {
                opacity: 0;
                transform: rotate(0deg) translate(2000px, -200px);
            }
            10% {
                opacity: .2;
                transform: rotate(0deg) scale(1) translate(1000px, -200px);
            }
            50% {
                opacity: .5;
                transform: rotate(160deg) scale(1.4) translate(800px, -200px);
            }
            90% {
                opacity: .8;
                transform: rotate(360deg) scale(1) translate(500px, -100px);
            }
            100% {
                opacity: 1;
                transform: rotate(360deg) translate(-50%, -50%);
            }
        }
        
        @keyframes text {
            from {
                opacity: 0;
                transform: translate(-50%, -50%);
            }
            to {
                opacity: .3;
                transform: translate(-50%, -50%);
            }
        }
        
        @keyframes final {
            from {
                opacity: 0;
                transform: translate(-300px, -50%);
            }
            to {
                opacity: 1;
                transform: translate(-50%, -50%);
            }
        }
    </style>
</head>

